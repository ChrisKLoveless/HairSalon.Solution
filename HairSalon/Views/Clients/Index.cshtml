@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<div class="container">
  <h1 class="jumbotron">Clients</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Clients have been added yet!</h3>
  }
  else
  {
    <ul class="row">
      @foreach (Client client in Model)
      {
        <li id="client">@Html.ActionLink($"{client.Name}", "Details", new { id = client.ClientId }) | <em>@client.Stylist.Name</em></li>
      }
    </ul>
  }

  <p>@Html.ActionLink("Add new Stylist", "Create", "Stylists")</p>
  <p>@Html.ActionLink("Add new client", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</div>