@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h3>Add a new Stylist:</h3>

@using (Html.BeginForm())
{
  @Html.TextBoxFor(model => model.Name, new { placeholder = "Name", style = "text-align: center;" })
  <input type="submit" value="Add a new stylist" class="btn btn-dark"/>
}
<p>@Html.ActionLink("Show all Stylists", "Index")</p>